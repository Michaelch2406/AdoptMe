<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:attr/colorBackground"
    tools:context=".AdoptMePortafolioActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- Logo Container -->
        <LinearLayout
            android:id="@+id/logoContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingTop="24dp"
            android:paddingBottom="8dp">

            <FrameLayout
                android:layout_width="80dp"
                android:layout_height="80dp">
                <ImageView
                    android:id="@+id/ivLogo"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@mipmap/ic_launcher"
                    android:layout_gravity="center" />
                <LinearLayout
                    android:id="@+id/layoutPaws"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center">
                    <ImageView
                        android:id="@+id/paw1"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/ic_paw"
                        android:tint="@color/colorAccent1"
                        android:alpha="0"
                        android:layout_marginEnd="25dp"
                        android:layout_marginBottom="35dp"
                        tools:ignore="UseAppTint" />
                    <ImageView
                        android:id="@+id/paw2"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/ic_paw"
                        android:tint="@color/colorAccent2"
                        android:alpha="0"
                        android:layout_marginTop="40dp"
                        tools:ignore="UseAppTint" />
                    <ImageView
                        android:id="@+id/paw3"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/ic_paw"
                        android:tint="@color/colorAccent3"
                        android:alpha="0"
                        android:layout_marginStart="25dp"
                        android:layout_marginBottom="35dp"
                        tools:ignore="UseAppTint" />
                </LinearLayout>
            </FrameLayout>

            <TextView
                android:id="@+id/tvAppName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="AdoptMe"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/colorPrimary"
                android:layout_marginTop="4dp" />

            <TextView
                android:id="@+id/tvSubtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Catálogo de Mascotas"
                android:textSize="16sp"
                android:textColor="?android:attr/textColorPrimary"
                android:alpha="0.7"
                android:layout_marginTop="2dp" />

            <TextView
                android:id="@+id/tvLocationInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="📍 Ubicación no disponible"
                android:textSize="13sp"
                android:textColor="@color/colorPrimary"
                android:layout_marginTop="4dp"
                android:visibility="gone"
                tools:visibility="visible"/>
        </LinearLayout>

        <!-- Content Container with Scroll -->
        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:fillViewport="true">
            
            <LinearLayout
                android:id="@+id/contentContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingTop="16dp">

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilBuscar"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:hint="Buscar fundación por nombre..."
                app:boxStrokeColor="@color/colorPrimary"
                app:endIconMode="clear_text"
                app:endIconTint="@color/colorPrimary"
                app:hintTextColor="@color/colorPrimary"
                app:startIconDrawable="@drawable/ic_search"
                app:startIconTint="@color/colorPrimary">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etBuscar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:maxLines="1"
                    android:textColor="?android:attr/textColorPrimary"
                    android:textColorHint="@color/colorPrimary" />
            </com.google.android.material.textfield.TextInputLayout>


            <TextView
                android:id="@+id/tvResultCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:alpha="0.6"
                android:text="0 mascotas encontradas"
                android:textColor="?android:attr/textColorPrimary"
                android:textSize="14sp" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="80dp">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvAnimales"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:clipToPadding="false"/>

                <LinearLayout
                    android:id="@+id/emptyStateContainer"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="32dp"
                    android:visibility="gone"
                    tools:visibility="visible">
                    <ImageView
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:src="@drawable/ic_pets"
                        android:tint="@color/colorPrimary"
                        android:alpha="0.3"
                        tools:ignore="UseAppTint" />
                    <TextView
                        android:id="@+id/tvEmptyMessage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="No se encontraron mascotas"
                        android:textSize="16sp"
                        android:textColor="?android:attr/textColorPrimary"
                        android:alpha="0.6"
                        android:layout_marginTop="16dp"
                        android:textAlignment="center" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Intenta ajustar los filtros de búsqueda"
                        android:textSize="14sp"
                        android:textColor="?android:attr/textColorPrimary"
                        android:alpha="0.5"
                        android:layout_marginTop="8dp"
                        android:textAlignment="center" />
                </LinearLayout>

            </FrameLayout>

            </LinearLayout>
            
        </androidx.core.widget.NestedScrollView>

    </LinearLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnRegresar"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_margin="16dp"
        android:paddingVertical="12dp"
        android:text="Regresar"
        android:textAllCaps="false"
        android:textColor="@color/colorPrimary"
        android:textSize="16sp"
        app:cornerRadius="25dp"
        app:strokeColor="@color/colorPrimary"
        app:strokeWidth="2dp" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabFilter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="88dp"
        android:src="@drawable/ic_filter"
        app:backgroundTint="@color/colorAccent2"
        app:elevation="6dp"
        app:pressedTranslationZ="12dp"
        app:tint="@color/white" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>