                    app:chipStrokeColor="#4CAF50"
                    app:chipStrokeWidth="1dp"
                    android:textColor="#2E7D32"
                    android:clickable="false" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipDesparasitado"
                    android:layout_width="wrap_content"
