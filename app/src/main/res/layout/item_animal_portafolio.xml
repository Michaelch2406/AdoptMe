<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardAnimal"
    android:layout_width="match_parent"
    android:layout_height="240dp"
    android:layout_margin="4dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="@color/white"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Imagen del animal -->
        <ImageView
            android:id="@+id/ivAnimal"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:scaleType="centerCrop"
            android:background="#F5F5F5" />

        <!-- Gradiente para mejorar legibilidad -->
        <View
            android:id="@+id/viewGradient"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_alignBottom="@+id/ivAnimal"
            android:background="@drawable/gradient_overlay" />

        <!-- Chip de tipo -->
        <com.google.android.material.chip.Chip
            android:id="@+id/chipTipo"
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:layout_margin="8dp"
            android:text="ðŸ•"
            android:textSize="16sp"
            style="@style/Widget.MaterialComponents.Chip.Entry"
            app:chipBackgroundColor="@color/colorAccent1"
            android:clickable="false"
            app:chipMinHeight="28dp" />

        <!-- InformaciÃ³n del animal -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ivAnimal"
            android:orientation="vertical"
            android:padding="12dp">

            <TextView
                android:id="@+id/tvNombre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Max"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:maxLines="1"
                android:ellipsize="end" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="2dp">

                <TextView
                    android:id="@+id/tvEdad"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2 aÃ±os"
                    android:textSize="13sp"
                    android:textColor="@color/black"
                    android:alpha="0.7" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" â€¢ "
                    android:textSize="13sp"
                    android:textColor="@color/black"
                    android:alpha="0.7" />

                <TextView
                    android:id="@+id/tvUbicacion"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Quito"
                    android:textSize="13sp"
                    android:textColor="@color/black"
                    android:alpha="0.7"
                    android:maxLines="1"
                    android:ellipsize="end" />

            </LinearLayout>

            <TextView
                android:id="@+id/tvDistancia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2.5 km"
                android:textSize="12sp"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold"
                android:layout_marginTop="2dp"
                android:visibility="gone" />

        </LinearLayout>

        <!-- BotÃ³n adoptar -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnAdoptar"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            android:layout_marginBottom="8dp"
            android:text="Adoptar"
            android:textSize="12sp"
            android:textAllCaps="false"
            style="@style/Widget.MaterialComponents.Button"
            app:backgroundTint="@color/colorPrimary"
            app:cornerRadius="16dp"
            android:paddingVertical="0dp" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>