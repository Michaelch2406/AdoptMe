<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:attr/colorBackground"
    tools:context=".ProcesarAdopcionActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Header -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:background="@drawable/header_gradient_background">

                    <TextView
                        android:id="@+id/tvAnimalName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Adopción de Max"
                        android:textColor="@color/white"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:gravity="center" />

                    <TextView
                        android:id="@+id/tvAnimalInfo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Complete el siguiente formulario para solicitar la adopción"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:gravity="center"
                        android:layout_marginTop="8dp"
                        android:alpha="0.9" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Form Container -->
            <LinearLayout
                android:id="@+id/formContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Sección 1: Motivaciones -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Motivaciones para Adoptar"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimary"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="12dp" />

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:hintEnabled="false">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etMotivoAdopcion"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="¿Por qué desea adoptar un animal de familia? *"
                        android:inputType="textMultiLine"
                        android:minLines="2"
                        android:maxLines="4" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:hintEnabled="false">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etPlanCambio"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Si tuviera que cambiar de domicilio y no aceptan animales, ¿qué pasaría? *"
                        android:inputType="textMultiLine"
                        android:minLines="2"
                        android:maxLines="4" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- Plan de viajes -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Si usted viaja por más de un día, el perro: *"
                    android:textSize="14sp"
                    android:textColor="?android:attr/textColorPrimary"
                    android:layout_marginBottom="8dp" />

                <RadioGroup
                    android:id="@+id/rgPlanViajes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp">

                    <RadioButton
                        android:id="@+id/rbViajaConmigo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Viaja conmigo" />

                    <RadioButton
                        android:id="@+id/rbQuedaFamiliar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Se queda con un familiar" />

                    <RadioButton
                        android:id="@+id/rbQuedaAmigo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Se queda con un amigo" />

                    <RadioButton
                        android:id="@+id/rbPagoAlguien"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pago a alguien para que vaya a mi casa y lo cuide" />

                    <RadioButton
                        android:id="@+id/rbHospedaje"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Hospedaje canino" />

                    <RadioButton
                        android:id="@+id/rbOtroViaje"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Otro" />

                </RadioGroup>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:hintEnabled="false">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etPlanViajesLargos"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Si viaja fuera del país por varios días, ¿qué sucedería?"
                        android:inputType="textMultiLine"
                        android:minLines="2"
                        android:maxLines="4" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:hintEnabled="false">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etHorasSolo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="¿Cuántas horas al día pasará solo el perro? *"
                        android:inputType="number" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- Sección 2: Ubicación y cuidados -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Ubicación y Cuidados"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimary"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="12dp" />

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:hintEnabled="false">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etUbicacionDia"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="¿Dónde pasará el perro durante el día?"
                        android:inputType="text" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:hintEnabled="false">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etUbicacionNoche"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="¿Dónde pasará durante la noche?"
                        android:inputType="text" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:hintEnabled="false">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etLugarDormir"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="¿Dónde dormirá el perro?"
                        android:inputType="text" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- Lugar de necesidades -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="¿En dónde hará sus necesidades fisiológicas? *"
                    android:textSize="14sp"
                    android:textColor="?android:attr/textColorPrimary"
                    android:layout_marginBottom="8dp" />

                <RadioGroup
                    android:id="@+id/rgLugarNecesidades"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp">

                    <RadioButton
                        android:id="@+id/rbPatio"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Patio/Jardín" />

                    <RadioButton
                        android:id="@+id/rbDentroCasa"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Dentro de casa" />

                    <RadioButton
                        android:id="@+id/rbFueraPropiedad"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Fuera de la propiedad (parques y veredas)" />

                    <RadioButton
                        android:id="@+id/rbOtrosLugar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Otros" />

                </RadioGroup>

                <!-- Cuidados que estarían dispuestos a brindar -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Cuidados que está dispuesto a brindar: *"
                    android:textSize="14sp"
                    android:textColor="?android:attr/textColorPrimary"
                    android:layout_marginBottom="8dp" />

                <CheckBox
                    android:id="@+id/cbPaseos"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Paseos diarios al menos una vez o más" />

                <CheckBox
                    android:id="@+id/cbJuguetes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Proveerle juguetes, galletas o huesos para perro" />

                <CheckBox
                    android:id="@+id/cbCollar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Mantenerlo con collar y placa de identificación" />

                <CheckBox
                    android:id="@+id/cbComida"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Proveerle comida adecuada dos veces al día y agua fresca permanente" />

                <CheckBox
                    android:id="@+id/cbContacto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Mantenerlo en contacto con la familia (no aislarlo)" />

                <CheckBox
                    android:id="@+id/cbClima"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Protegerlo de las inclemencias del clima" />

                <CheckBox
                    android:id="@+id/cbLugar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Proveerle un lugar abrigado y seguro para dormir" />

                <CheckBox
                    android:id="@+id/cbCepillar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Cepillar su pelo regularmente" />

                <CheckBox
                    android:id="@+id/cbDientes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Cepillar sus dientes conforme lo indique el veterinario" />

                <CheckBox
                    android:id="@+id/cbVeterinario"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Llevarlo periódicamente al veterinario"
                    android:layout_marginBottom="16dp" />

                <!-- Frecuencias de cuidado -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="¿Con qué frecuencia lo bañaría? *"
                    android:textSize="14sp"
                    android:textColor="?android:attr/textColorPrimary"
                    android:layout_marginBottom="8dp" />

                <RadioGroup
                    android:id="@+id/rgFrecuenciaBano"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp">

                    <RadioButton
                        android:id="@+id/rbNuncaBano"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nunca" />

                    <RadioButton
                        android:id="@+id/rbVezCuandoBano"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="De vez en cuando" />

                    <RadioButton
                        android:id="@+id/rbMensualBano"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Una vez al mes" />

                    <RadioButton
                        android:id="@+id/rbOtroBano"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Otro" />

                </RadioGroup>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="¿Con qué frecuencia lo llevaría a cortar el pelo?"
                    android:textSize="14sp"
                    android:textColor="?android:attr/textColorPrimary"
                    android:layout_marginBottom="8dp" />

                <RadioGroup
                    android:id="@+id/rgFrecuenciaCorte"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp">

                    <RadioButton
                        android:id="@+id/rbNuncaCorte"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nunca" />

                    <RadioButton
                        android:id="@+id/rbVezCuandoCorte"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="De vez en cuando" />

                    <RadioButton
                        android:id="@+id/rbMensualCorte"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Una vez al mes" />

                    <RadioButton
                        android:id="@+id/rbOtroCorte"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Otro" />

                </RadioGroup>

                <!-- Alimentación -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="¿Qué tipo de alimento le ofrecerá? *"
                    android:textSize="14sp"
                    android:textColor="?android:attr/textColorPrimary"
                    android:layout_marginBottom="8dp" />

                <RadioGroup
                    android:id="@+id/rgTipoAlimentacion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp">

                    <RadioButton
                        android:id="@+id/rbBalanceado"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Balanceado" />

                    <RadioButton
                        android:id="@+id/rbCasera"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Comida casera" />

                    <RadioButton
                        android:id="@+id/rbSobras"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sobras de la casa" />

                    <RadioButton
                        android:id="@+id/rbOtroAlimento"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Otro" />

                </RadioGroup>

                <!-- Conocimiento sobre tóxicos -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="¿Conoce qué alimentos pueden ser tóxicos? *"
                    android:textSize="14sp"
                    android:textColor="?android:attr/textColorPrimary"
                    android:layout_marginBottom="8dp" />

                <RadioGroup
                    android:id="@+id/rgConoceToxicos"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp">

                    <RadioButton
                        android:id="@+id/rbConoceToxicosSi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sí" />

                    <RadioButton
                        android:id="@+id/rbConoceToxicosNo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="No" />

                </RadioGroup>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:hintEnabled="false">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etToxicosConocidos"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Mencione los que conozca"
                        android:inputType="textMultiLine"
                        android:visibility="gone"
                        android:minLines="2"
                        android:maxLines="4" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- Expectativa de vida -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:hintEnabled="false">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etAnosVida"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="¿Cuántos años viven los perros en promedio? *"
                        android:inputType="number" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- Sección 3: Costos y responsabilidades -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Costos y Responsabilidades"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimary"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="12dp" />

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:hintEnabled="false">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etPlanEnfermedad"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Si su perro se enferma, usted: *"
                        android:inputType="textMultiLine"
                        android:minLines="2"
                        android:maxLines="4" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:hintEnabled="false">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etResponsableCostos"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="¿Quién será responsable de los costos económicos? *"
                        android:inputType="text" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- Presupuesto mensual -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Presupuesto mensual estimado: *"
                    android:textSize="14sp"
                    android:textColor="?android:attr/textColorPrimary"
                    android:layout_marginBottom="8dp" />

                <RadioGroup
                    android:id="@+id/rgPresupuestoMensual"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp">

                    <RadioButton
                        android:id="@+id/rbPresupuesto1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="$5 a $20" />

                    <RadioButton
                        android:id="@+id/rbPresupuesto2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="$21 a $50" />

                    <RadioButton
                        android:id="@+id/rbPresupuesto3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="$51 en adelante" />

                </RadioGroup>

                <!-- Recursos veterinarios -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="¿Cuenta con recursos para gastos veterinarios? *"
                    android:textSize="14sp"
                    android:textColor="?android:attr/textColorPrimary"
                    android:layout_marginBottom="8dp" />

                <RadioGroup
                    android:id="@+id/rgRecursosVeterinarios"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp">

                    <RadioButton
                        android:id="@+id/rbRecursosVeterinariosSi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sí" />

                    <RadioButton
                        android:id="@+id/rbRecursosVeterinariosNo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="No" />

                </RadioGroup>

                <!-- Visitas -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="¿Acepta visitas periódicas de la fundación? *"
                    android:textSize="14sp"
                    android:textColor="?android:attr/textColorPrimary"
                    android:layout_marginBottom="8dp" />

                <RadioGroup
                    android:id="@+id/rgAceptaVisitas"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp">

                    <RadioButton
                        android:id="@+id/rbAceptaVisitasSi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sí" />

                    <RadioButton
                        android:id="@+id/rbAceptaVisitasNo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="No" />

                </RadioGroup>

                <!-- Esterilización -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="¿Está de acuerdo con la esterilización? *"
                    android:textSize="14sp"
                    android:textColor="?android:attr/textColorPrimary"
                    android:layout_marginBottom="8dp" />

                <RadioGroup
                    android:id="@+id/rgAceptaEsterilizacion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp">

                    <RadioButton
                        android:id="@+id/rbAceptaEsterilizacionSi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sí" />

                    <RadioButton
                        android:id="@+id/rbAceptaEsterilizacionNo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="No" />

                </RadioGroup>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:hintEnabled="false">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etRazonEsterilizacion"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="¿Por qué? (opcional)"
                        android:inputType="textMultiLine"
                        android:visibility="gone"
                        android:minLines="2"
                        android:maxLines="4" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- Conoce beneficios -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="¿Conoce los beneficios de la esterilización? *"
                    android:textSize="14sp"
                    android:textColor="?android:attr/textColorPrimary"
                    android:layout_marginBottom="8dp" />

                <RadioGroup
                    android:id="@+id/rgConoceBeneficios"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp">

                    <RadioButton
                        android:id="@+id/rbConoceBeneficiosSi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sí" />

                    <RadioButton
                        android:id="@+id/rbConoceBeneficiosNo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="No" />

                </RadioGroup>

                <!-- Mal comportamiento -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:hintEnabled="false">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etPlanMalComportamiento"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Si el comportamiento no es el esperado, ¿qué haría? *"
                        android:inputType="textMultiLine"
                        android:minLines="2"
                        android:maxLines="4" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- Consciente de maltrato -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="¿Está consciente de que el castigo físico es maltrato animal? *"
                    android:textSize="14sp"
                    android:textColor="?android:attr/textColorPrimary"
                    android:layout_marginBottom="8dp" />

                <RadioGroup
                    android:id="@+id/rgConscienteMaltrato"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="32dp">

                    <RadioButton
                        android:id="@+id/rbConscienteMaltratoSi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sí" />

                    <RadioButton
                        android:id="@+id/rbConscienteMaltratoNo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="No" />

                </RadioGroup>

            </LinearLayout>

            <!-- Botones de acción -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="16dp">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnRegresar"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    android:text="Cancelar"
                    android:textSize="16sp"
                    style="@style/Widget.Material3.Button.OutlinedButton" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnSubmit"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    android:text="Enviar Solicitud"
                    android:textSize="16sp"
                    android:backgroundTint="@color/colorPrimary" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>